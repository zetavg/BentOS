<% if current_page.first? %>
  <li class="page-item disabled">
    <a class="page-link" href="#" tabindex="-1" aria-disabled="true"><%= raw t('views.pagination.first') %></a>
  </li>
<% else %>
  <li class="page-item">
    <a class="page-link" href="<%= url %>"><%= raw t('views.pagination.first') %></a>
  </li>
<% end %>
