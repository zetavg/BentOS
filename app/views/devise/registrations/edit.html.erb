<div class="container mt-4">
  <h2 class="mb-4">Update <%= resource_name.to_s.humanize %> Registration</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <%= f.input :email, hint: devise_mapping.confirmable? && resource.pending_reconfirmation? ? "Currently waiting confirmation for: <strong>".html_safe + resource.unconfirmed_email + "</strong>".html_safe : '' %>
    <%= f.input :password, hint: "Leave blank if you don't want to change it #{@minimum_password_length ? " (#{@minimum_password_length} characters minimum)" : ''}" %>
    <%= f.input :password_confirmation, hint: "Leave blank if you arn't changing the password", autocomplete: 'new-password' %>
    <%= f.input :current_password, hint: 'We need your current password to confirm your changes' %>
    <%= f.button :submit, 'Update' %>
    <%= link_to 'Cancel', :back, { class: 'btn btn-secondary' } %>
  <% end %>
</div>
